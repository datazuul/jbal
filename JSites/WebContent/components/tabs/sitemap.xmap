<?xml version="1.0" encoding="UTF-8"?>

<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
	
	<map:components>
        <map:transformers default="xslt">
        	<map:transformer name="activeTab" src="JSites.transformation.ActiveTab"/>
        </map:transformers>        
	</map:components>
	
	<map:pipelines>
		
		<map:pipeline internal-only="true">

	            <map:match pattern="*">
	                
	                <map:act type="request">
	                    <map:parameter name="parameters" value="true" />
	                    <map:generate src="{request-param:datadir}/data/tabs{cid}.xml" />
	                    
	   					<map:transform src="tabs.xslt">
		                    <map:parameter name="use-request-parameters" value="true" />
		                </map:transform>
		                <map:transform type="activeTab"/>
	        			<map:serialize type="xml"/>
	                </map:act>
	
	            </map:match>
	            
		</map:pipeline>
		
	</map:pipelines>
	
</map:sitemap>